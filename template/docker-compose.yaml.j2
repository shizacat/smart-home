version: '2'
services:
  nginx:
    image: nginx:1.19.9
    network_mode: host
    restart: always
    volumes:
      - ./nginx/config/nginx.conf:/etc/nginx/conf.d/default.conf
      - ./nginx/web:/web

  zigbee2mqtt:
    image: koenkk/zigbee2mqtt:1.18.3
    network_mode: host
    privileged: true
    restart: always
    #ports:
    #  - 127.0.0.1:8088:8088
    devices:
      - "{{ zigbee_device }}:{{ zigbee_device }}"
    volumes:
      - /run/udev:/run/udev:ro
      - ./zigbee2mqtt:/app/data
    environment:
      - TZ={{ time_zone }}

  homebridge:
    # image: oznu/homebridge:latest
    build:
      dockerfile: Dockerfile.homebridge
      context: .
    container_name: homebridge
    restart: always
    network_mode: host
    environment:
      - TZ={{ time_zone }}
      - PGID=1000
      - PUID=1000
      - HOMEBRIDGE_CONFIG_UI=1
      - HOMEBRIDGE_CONFIG_UI_PORT=8581
        #devices:
        #- "/dev/ttyACM0:/dev/ttyACM0"
    volumes:
      - ./homebridge:/homebridge
        #    privileged: true
